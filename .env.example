# Django Settings
# ===============
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database (PostgreSQL)
# ====================
POSTGRES_DB=notification_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# RabbitMQ
# ========
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_USE_SSL=False

# Redis
# =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Email (SMTP)
# ============
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL='Notification System <noreply@example.com>'

# Firebase Cloud Messaging (FCM)
# =============================
FCM_SERVER_KEY=your-fcm-server-key

# Service Discovery (Consul)
# =========================
CONSUL_HOST=consul
CONSUL_PORT=8500
SERVICE_NAME=notification-service

# Django Allowed Hosts
# ===================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS Settings
# ============
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Settings
# ===========
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA_DAYS=7

# Logging
# =======
LOG_LEVEL=INFO
LOG_FILE=logs/notification_system.log

# Security
# ========
# Set these to False in production
DEBUG=True
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SECURE_CONTENT_TYPE_NOSNIFF=True

# API Keys (add your API keys here)
# =================================
SENDGRID_API_KEY=your-sendgrid-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name

# Feature Flags
# ============
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_PUSH_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False

# Rate Limiting
# =============
RATE_LIMIT=1000  # requests per hour per IP
